                        <CheckBox
                            android:id="@+id/chkModified"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Vehicle Modified for Handicap" />

                        <CheckBox
                            android:id="@+id/chkTPPD"
