                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Emergency Cover" />


                            <CheckBox
                                android:id="@+id/chkConsumables"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Consumables" />

                            <CheckBox
                                android:id="@+id/chkTyre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Tyre Cover" />

                            <CheckBox
                                android:id="@+id/chkNCB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
