                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Loss of Key" />

                            <CheckBox
                                android:id="@+id/chkRoad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Road Side Assistance" />


                            <CheckBox
                                android:id="@+id/chkPassenger"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Passenger Assist Cover" />

                            <CheckBox
                                android:id="@+id/chkPersonal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Loss Personal Belonging" />

                            <CheckBox
                                android:id="@+id/chkHospital"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
