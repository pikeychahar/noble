<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:divider="@android:color/transparent"
        android:elevation="8dp"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@anim/animation">

        <RelativeLayout
            android:id="@+id/rlDocCC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txtDocumentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mandate"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/vehicleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtDocumentType"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:text="rj14rg5678" />

            <TextView
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:padding="3dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@color/colorRed"
                android:text="Remove" />

            <TextView
                android:id="@+id/txtPartyNameType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtDocumentType"
                android:layout_marginTop="5dp"
                android:text="Insurance" />

            <include
                android:id="@+id/divider"
                layout="@layout/divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPartyNameType"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/txtInsertDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:text="30-12-2019"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/txtView"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:background="@drawable/dark_theme"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:text="View"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>