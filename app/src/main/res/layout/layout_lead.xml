<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:divider="@android:color/transparent"
        android:elevation="8dp"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@anim/animation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtInsurerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pikay Choudhary"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/txtDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/dark_theme"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:minWidth="90dp"
                android:text="Convert"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtVehicleModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtInsurerName"
                android:layout_marginTop="5dp"
                android:text="TVS Victor GLX DRUM BRAKE (110 Cc)" />
            <TextView
                android:id="@+id/policyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:minWidth="90dp"
                android:paddingEnd="5dp"
                android:layout_alignParentEnd="true"
                android:paddingTop="2dp"
                android:layout_below="@id/txtInsurerName"
                android:paddingBottom="2dp"
                android:text="Corporate"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center" />

            <include
                android:id="@+id/divider"
                layout="@layout/divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/policyType"
                android:layout_margin="5dp" />


            <TextView
                android:id="@+id/vehicleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_below="@+id/divider"
                android:text="RJ14DS6253" />
            <ImageView
                android:id="@+id/leadInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/divider"
                android:background="@drawable/ic_info"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>