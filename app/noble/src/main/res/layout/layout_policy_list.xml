<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.5dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/policy_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Policy Type"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/policy_insurer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/policy_type"
            android:layout_marginTop="5dp"
            android:text="Policy Insurer" />

        <TextView
            android:id="@+id/policy_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/policy_type"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:text="12-11-2019" />

        <TextView
            android:id="@+id/exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/policy_type"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/policy_exp"
            android:text="Expire on"
            android:textColor="@android:color/black" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>